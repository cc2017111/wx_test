page {
  background: #e8e8e8;
}

.page_title {
  text-align: center;
  border-bottom: 3px solid #e8e8e8;
  height: 2.5em;
  position: relative;
  background: #fff;
}

.page_title .back {
  height: 1.5em;
  width: 1.5em;
  position: absolute;
  left: 0.5em;
  top: 0.5em;
}

.page_title .info {
  line-height: 2.5em;
}

.SeconTab {
  display: flex;
  flex-direction: row;
  height: 2.3em;
  box-shadow: 0px 0px 3px #e8e8e8;
  background: #fff;
}

.SeconTab > view {
  width: 50%;
  text-align: center;
  line-height: 2.3em;
}

.SeconTab > view.active {
  border-bottom: 3px solid #ffc12b;
}

.homeSecondDetail {
  width: 300px;
  overflow: hidden;
  border-radius: 20px;
  margin: 0 auto;
  margin-top: 2em;
  padding-bottom: 2em;
  background: #fff;
  box-shadow: 2px 5px 50px #d1d1d1;
}

.homeSecondDetail .wrapper {
  width: 100%;
  height: 180px;
}

.homeSecondDetail .publishDate {
  display: block;
  line-height: 3em;
  text-align: center;
  font-size: 14px;
  font-weight: bold;
}

.homeSecondDetail .detailTitle {
  letter-spacing: 0.1em;
  margin-bottom: 2em;
  padding: 0 0.5em;
  line-height: 1.25em;
}

.btn_box .btn {
  width: 150px;
  margin: 20px auto;
  text-align: center;
  line-height: 3em;
  font-size: 12px;
  /* 12px * 3em = 36px; */
  border-radius: 36px;
}

.btn_box .btn.forcusBtn {
  background: #333;
  color: #fff;
  border: 1px solid #222;
}

.btn_box .btn.colloctionBtn {
  background: rgb(241, 223, 52);
  border: 1px solid #ffc12b;
}

