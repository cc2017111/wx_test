.personSecondBar {
  height: 2em;
  border: 3px solid #eee;
  display: flex;
  flex-direction: row;
}

.personSecondBar .personSecondBarElement {
  width: 50%;
  text-align: center;
  border: 2px solid #eee;
}

.personSecondBarElement.active {
  border-bottom: 3px solid #f68135;
}

.personInfo {
  height: 50%;
  width: 80%;
  /* border: 2px solid #f68135; */
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
  position: absolute;
  margin: 0 5vh;
}

.personInfoBackground {
  width: 50%;
  height: 50%;
}

.personInfoChangeBackground {
  border: 1px solid #999;
  font-size: 16;
