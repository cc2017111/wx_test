<!--pages/mobile/mobile.wxml-->
<view class="content">
	<view class="hr"></view>
	<view class="numbg">
		<view>+86</view>
		<view><input placeholder="请输入手机号" maxlength="11" bind:blur="mobileblur" /></view>
	</view>
  <view class="numbg">
		<view><input placeholder="请输入昵称" maxlength="11" bind:blur="nicknameblur" /></view>
	</view>
  <view class="numbg">
		<view><input placeholder="请输入密码" maxlength="11" password="{{true}}" bind:blur="passwordblur" /></view>
	</view>
  <view class="numbg">
		<view><input placeholder="请输入你的角色" maxlength="11" bind:blur="roleblur" /></view>
	</view>
	<view>
		<view class="xieyi">
			<icon type="success" color="red" size="18" />
			<text class="agree">同意</text>
			<text class="opinion">用户注册协议</text>
		</view>
	</view>
	<button class="btn" type="{{btnstate}}" disabled="{{disabled}}" bindtap="addUser">
		完成注册
	</button>
</view>